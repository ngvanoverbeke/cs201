{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-o",
                "a.exe",
                "*.cpp"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "pause",
            "command": "pause"
        },
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            }
        }
    ]
}